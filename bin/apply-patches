#!/bin/sh
#set -x
#
# Apply patches
#
if [ ! -x bin/$(basename $0) ]
then
	echo "ERROR: Run this from top level"
	exit 1
fi
. ./config.sh


AGGR_MODULE=$(basename $ECLIPSE_AGGR)
BASELINE=".baseline.${AGGR_MODULE}"
PATCHED=".patched.${AGGR_MODULE}"
if [ ! -d ${BASELINE} ]
then
	echo "ERROR: bin/prepare-tree needs to be run first"
	exit 1
fi
if [ -d ${PATCHED} ]
then
	echo "ERROR: work-tree already patched"
	exit 1
fi

#
# Apply patches one-by-one so that errors can be identified
#
for P in patches/patch-*
do
	patch --directory ${AGGR_MODULE} --fuzz 0 -V none --quiet < ${P}
	if [ $? -ne 0 ]
	then
		echo "ERROR: Unclean ${P}"
		exit 1
	fi
	echo "INFO: Applied ${P}"
done

echo "INFO: Creating patched copy"
cd ${AGGR_MODULE} && find . -print | cpio -pduml ../${PATCHED}
